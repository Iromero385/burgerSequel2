<div class="row">
  <div class="col-md-12">
    <div class="jumbotron text-center bg-warning">
      <div class="display-4 font-weight-bold text-danger">Eat-dat-Burger!</div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6" style="background:rgb(155, 85, 38)">
    <div class="h3">Burgers that are not devoured!</div>
    <ul class="list-group mb-3">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6" style="background:rgb(149, 64, 64)">
    <div class="h3">Burgers that are devoured!</div> 
    <ul class="list-group mb-3">
      {{#each burgers}}
      {{#if devoured}}
      {{> burger/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col align-self-center">

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
        <br>
        <label for="devour"></label>
        <input type="radio" name="devoured" value="0" checked> Ready to eat!
        <input type="radio" name="devoured" value="1"> Devoured
      </div>

      <button class="btn btn-sm btn-outline-secondary" type="submit">Add Burger</button>
    </form>

  </div>
</div>
